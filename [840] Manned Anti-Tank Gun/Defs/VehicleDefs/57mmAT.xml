			<shaderType>CutoutComplexPattern</shaderType>
			<drawSize>6</drawSize>
			<drawOffset>(0,0,0)</drawOffset>
			<color>(138, 155, 96)</color>
			<colorTwo>(69, 77, 48)</colorTwo>
			<colorThree>(34, 38, 24)</colorThree>
		</graphicData>
		
		<fillPercent>0.75</fillPercent>
		
		<nameable>false</nameable>
